<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.Guideline
            android:id="@+id/guideline28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="1000dp" />

        <ImageView
            android:id="@+id/profileKoperasi"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/gradient_background" />

        <TextView
            android:id="@+id/textViewNamaKopeasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Koperasi Makmur Sejahtera"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileKoperasi" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewManage">

            <LinearLayout
                android:id="@+id/manageMamber"
                android:layout_width="135dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageViewMember"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    app:srcCompat="@drawable/ic_account_circle_black_24dp" />

                <TextView
                    android:id="@+id/textViewMember"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Member"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/manageBadanUsaha"
                android:layout_width="136dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/manageKoperasi"
                app:layout_constraintStart_toEndOf="@+id/manageMamber"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageViewBadanUsaha"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    app:srcCompat="@drawable/ic_account_circle_black_24dp" />

                <TextView
                    android:id="@+id/textViewBadanUsaha"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Badan Usaha"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/manageKoperasi"
                android:layout_width="136dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageViewKoperasi"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    app:srcCompat="@drawable/ic_account_circle_black_24dp" />

                <TextView
                    android:id="@+id/textViewKoperasi"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Koperasi"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>


        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/textViewManage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Manage"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="#1D4CC3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewNamaKopeasi" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>